#!/usr/bin/env bash
#
#  TMUX [S]ELECT [P]ROJECT

WORKSPACE_FOLDERS="$HOME/work $HOME/other"
OTHER_FOLDERS="$HOME/.dotfiles"

if [ -n "$1" ]; then
  tmux switch-client -t "$(\
    echo "$@" | tr ' ' '\n' |
    fzf --height 50% --layout=reverse --border --header 'FZF open sessions to attach'\
  )"
  exit 0
fi

if [[ $# -eq 1 ]]; then
  selected=$1
else
  selected="$(\
    printf "$(find $WORKSPACE_FOLDERS -mindepth 1 -maxdepth 1 -type d)\n$OTHER_FOLDERS" |
    sed -E 's/(.*)\/(.*)\/([^\/]+)$/\2\/\3/g' |
    fzf --height 50% \
    --layout=reverse \
    --border \
    --header 'TMUX - SELECT PROJECT:' \
    --preview "ls -la $HOME/{}"
  )"
fi

if [[ -z "$selected" ]]; then
  exit 0
fi

selected="$HOME/$selected"

base_name=$(echo "$selected" | tr . _)

# Name the session using the worskspace + folder
# Eg.
# /user/name/work/myproject => work/myproject
# /user/name/other/oproject => other/oproject
#
selected_name=$(echo "$base_name" | sed -E 's/(.*)\/(.*)\/([^\/]+)$/\2\/\3/g')

if [[ -z $selected ]]; then
  exit 0
fi

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
  tmux new-session -s "$selected_name" -c "$selected"
  exit 0
fi

if ! tmux has-session -t="$selected_name" 2> /dev/null; then
  tmux new-session -ds "$selected_name" -c "$selected"
fi

tmux switch-client -t "$selected_name"
