#!/usr/bin/env bash
#
#  TMUX [S]ELECT [P]ROJECT

WORKSPACE_FOLDERS="$HOME/work $HOME/other"

if [ -n "$1" ]; then
  tmux switch-client -t "$(\
    echo "$@" | tr ' ' '\n' | tr '_' '.' |
    fzf --height 50% \
        --layout=reverse \
        --border \
        --header '---------------TMUX - SELECT SESSION---------------' \
        --preview "cat $HOME/{}/README.* || ls -la $HOME/{}"
  )"
  exit 0
fi

if [[ $# -eq 1 ]]; then
  selected=$1
else
  selected="$(\
    printf "$(find $WORKSPACE_FOLDERS \
      -mindepth 1 \
      -maxdepth 1 \
      -type d \
      -follow)" |
    # Name the session using the worskspace + folder
    # Eg.
    # /user/name/work/myproject => work/myproject
    # /user/name/other/oproject => other/oproject
    #
    sed -E 's/(.*)\/(.*)\/([^\/]+)$/\2\/\3/g' |
    fzf --height 80% \
        --layout=reverse \
        --border \
        --header '---------------TMUX - SELECT PROJECT---------------' \
        --preview "cat $HOME/{}/README.* || ls -la $HOME/{}"
  )"
fi

if [[ -z "$selected" ]]; then
  exit 0
fi

path_to_project="$HOME/$selected"

if [[ -z $selected ]]; then
  exit 0
fi

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
  tmux new-session -s "$selected" -c "$path_to_project"
  exit 0
fi

if ! tmux has-session -t="$selected" 2> /dev/null; then
  tmux new-session -ds "$selected" -c "$path_to_project"
fi

tmux switch-client -t "$selected"
